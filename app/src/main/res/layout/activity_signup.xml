<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="440dp"
            android:background="@drawable/circle_text"
            android:ems="10"
            android:hint=" Enter your Name "
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="315dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="365dp"
            android:background="@drawable/circle_text"
            android:ems="10"
            android:hint=" Enter your email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/signup_Password"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="290dp"
            android:background="@drawable/circle_text"
            android:ems="10"
            android:hint=" Enter your password"
            android:inputType="textPassword" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_splashscreen"
            android:layout_width="137dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="580dp"
            android:src="@drawable/logo"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="243dp"
            android:layout_marginBottom="515dp"
            android:text="Musify"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/signin"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="307dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="646dp"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="279dp"
            android:layout_marginBottom="244dp"
            android:text="Gender"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="488dp"
            android:layout_marginEnd="268dp"
            android:layout_marginBottom="184dp"
            android:src="@drawable/male"></de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="263dp"
            android:layout_marginTop="488dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="184dp"
            android:src="@drawable/unknown"></de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_unkbown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="159dp"
            android:layout_marginTop="488dp"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="184dp"
            android:src="@drawable/female"></de.hdodenhof.circleimageview.CircleImageView>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="557dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="116dp"
            android:buttonTint="@color/white"
            android:text="I would like to receive your Newsletter and other promotional offers"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="625dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/circle_button"
            android:text="Sign Up" />

    </RelativeLayout>

</LinearLayout>
